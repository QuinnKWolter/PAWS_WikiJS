# WikiJS Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=wikijs
DB_PASS=CHANGE_THIS_TO_A_SECURE_PASSWORD
DB_NAME=wikijs

# WikiJS Server Configuration
WIKI_PORT=3000
WIKI_HOST=localhost
WIKI_HTTPS=false

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/wiki/storage

# Security - Generate a random string for production
# You can generate one with: openssl rand -hex 32
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_STRING

# Optional: External Database (if not using Docker postgres)
# DB_HOST=your-db-host.com
# DB_PORT=5432
# DB_USER=your-db-user
# DB_PASS=your-db-password
# DB_NAME=your-db-name

# Optional: Cloud Storage (S3, etc.)
# STORAGE_TYPE=s3
# STORAGE_S3_ACCESS_KEY_ID=your-access-key
# STORAGE_S3_SECRET_ACCESS_KEY=your-secret-key
# STORAGE_S3_BUCKET=your-bucket-name
# STORAGE_S3_REGION=us-east-1

